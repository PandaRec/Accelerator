<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/view"
        android:layout_width="@dimen/border_width_day_month"
        android:layout_height="@dimen/border_height_day_month"
        android:background="@color/gray_border"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textViewHeaderDayOfWeek"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/border_width_day_month"
        android:layout_height="@dimen/border_height_day_month"
        android:background="@color/gray_border"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/textViewHeaderDayOfWeek"
        />
    <TextView
        android:id="@+id/textViewHeaderDayOfWeek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Пт"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view"
        app:layout_constraintStart_toEndOf="@id/view2"
        style="@style/text_view_header_month"

        />


</androidx.constraintlayout.widget.ConstraintLayout>