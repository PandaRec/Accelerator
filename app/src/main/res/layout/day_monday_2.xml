<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_for_day_month_item"
    android:paddingTop="1dp"
    android:paddingEnd="1dp">
    <TextView
        android:id="@+id/titleMonday2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="monday2"
        style="@style/text_view_day_title_month"
        />
    <TextView
        android:id="@+id/lesson1Monday2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titleMonday2"
        app:layout_constraintStart_toStartOf="parent"
        android:text="lesson1"
        style="@style/text_view_day_lesson_month"
        />

</androidx.constraintlayout.widget.ConstraintLayout>