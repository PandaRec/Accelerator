<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/first"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/monthViewMonday"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/monthViewMonday"
        android:layout_width="58dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/first"
        android:text="П"
        android:textSize="24sp"
        android:gravity="center"
        android:background="@color/teal_700"
        />
    <View
        android:id="@+id/second"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/monthViewMonday"
        app:layout_constraintStart_toEndOf="@id/monthViewMonday"
        />
    <TextView
        android:id="@+id/monthViewTuesday"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/second"
        android:text="В"
        android:textSize="24sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/monthViewWednesday"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/monthViewTuesday"
        android:text="С"
        android:textSize="24sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/monthViewThursday"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/monthViewWednesday"
        android:text="Ч"
        android:textSize="24sp"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>